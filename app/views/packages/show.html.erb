<h1 class='container'><%= @package.name %></h1>

<div class='container' id='package'>
  <div>
    <p>Items: <%= @package.item_names %></p>
    <p>Price: <%= number_to_currency(@package.price) %></p>
  </div>

  <% if current_user.nil? %>
    <p><%= link_to "Log in", login_path %> now to subscribe!</p>
  <% else %>
    <%= form_tag charges_path do %>
      <article>
        <% if flash[:error].present? %>
          <div id="error_explanation">
            <p><%= flash[:error] %></p>
          </div>
        <% end %>

        <%= label_tag :mod, "Select Module", class: :form_control %>
        <%= select_tag :mod, options_for_select(["1703"]) %>
        <%= hidden_field_tag :package_id, @package.id %>


        <label class="amount">
          <span>Amount: $5.00</span>
        </label>

          </article>

      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
              data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
              data-description="A month's subscription"
              data-amount="500"
              data-locale="auto"></script>
    <% end %>
  <% end %>
</div>
