<% if current_user %>
<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.first_name if current_user %><span class="caret"></span></a>
  <ul class="dropdown-menu">
    <% if current_user %>
    <li><%= link_to "Dashboard", "/dashboard" %></li>
    <% if current_admin? %>
    <li><%= link_to "Admin Dashboard", "/admin/dashboard" %></li>
    <% end %>
    <li><%= link_to "Logout", "/logout", method: :delete %></li>
    <% end %>
  </ul>
</li>
<% end %>
