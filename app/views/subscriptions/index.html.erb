<h1 class='container'>Subscriptions</h1>
<div class="container">
<table class="table table-hover">
  <thead>
  <tr>
    <th>Id</th>
    <th>Module</th>
    <th>Weeks</th>
    <th>Price</th>
  </tr>
  </thead>

  <tbody>
    <% @subscriptions.each do |subscription| %>
    <tr>
      <td><%= link_to subscription.id, subscription_path(subscription) %></td>
      <td><%= subscription.mod %></td>
      <td><%= subscription.week_array.join(", ") %></td>
      <td><%= number_to_currency(subscription.price) %></td>
    </tr>
  <% end %>
</tbody>
</table>
</div>
